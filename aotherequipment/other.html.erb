<!-- app/views/aotherequipment/index.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List of Equipments</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    .go-back-link {
      display: block;
      background-color: #3498db; /* Adjust the color as needed */
      color: #fff;
      padding: 8px 12px;
      text-decoration: none;
      border-radius: 3px;
      margin-bottom: 20px; /* Adjust the margin as needed */
    }

    .go-back-link:hover {
      background-color: #2980b9; /* Adjust the hover color as needed */
    }

    h1 {
      text-align: center;
      color: #333;
      margin-top: 20px;
    }

    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      background-color: #fff;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 15px;
      text-align: left;
    }

    th {
      background-color: #4CAF50;
      color: white;
    }

    tr:hover {
      background-color: #f5f5f5;
    }

    button {
      background-color: #008CBA;
      color: white;
      border: none;
      padding: 8px 12px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 14px;
      margin: 2px 2px;
      cursor: pointer;
      border-radius: 3px;
    }

    a {
      text-decoration: none;
      color: white;
    }

    button:hover {
      background-color: #00587a;
    }

    aotherequipment_path {
      display: inline-block;
      background-color: #d9534f;
      color: #fff;
      padding: 8px 12px;
      text-decoration: none;
      border-radius: 3px;
      margin-top: 10px;
    }

    aotherequipment_path:hover {
      background-color: #c9302c;
    }
  </style>
</head>
<body>
  <!-- "Go Back" link at the top -->
  <a class="go-back-link" href="/adminlist">Go Back</a>

  <h1>List of All Equipments</h1>
  <table border="1">
    <thead>
      <th>Name</th>
      <th>Equipment Class</th>
      <th>Specs</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Status</th>
      <th>Edit</th>
      <th>Delete</th>
    </thead>
    <tbody>
      <% if @equipments.present? %>
        <% @equipments.each do |equipment| %>
          <tr>
            <td><%= equipment.name %></td>
            <td><%= equipment.equipment_class %></td>
            <td><%= equipment.specs %></td>
            <td><%= equipment.quantity %></td>
            <td><%= equipment.price %></td>
            <td><%= equipment.status %></td>
            <td><button><a href="<%= edit_aotherequipment_path(equipment.id) %>">Edit</a></button></td>
            <td><button><a href="<%= aotherequipment_path(equipment.id) %>" data-method="delete" data-confirm="Are you sure?">Delete</a></button></td>
          </tr>
        <% end %>
      <% end %> <!-- Add this line to close the if condition -->
    </tbody>
  </table>
</body>
</html>
