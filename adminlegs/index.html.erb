<!-- app/views/adminlegs/index.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>List of All Adminlegs</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f8f8f8;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1 {
      text-align: center;
      color: #333;
      margin-top: 20px;
    }

    .table-container {
      width: 80%;
      margin-top: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      background-color: #fff;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 15px;
      text-align: left;
    }

    th {
      background-color: #4CAF50;
      color: white;
    }

    tr:hover {
      background-color: #f5f5f5;
    }

    button {
      background-color: #008CBA;
      color: white;
      border: none;
      padding: 8px 12px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 14px;
      margin: 2px 2px;
      cursor: pointer;
      border-radius: 3px;
    }

    a {
      text-decoration: none;
      color: white;
    }

    button:hover {
      background-color: #00587a;
    }

    .no-data {
      text-align: center;
      color: #777;
      padding: 20px;
    }

    .go-back {
      margin-top: 20px;
      text-align: center;
    }

    .go-back a {
      background-color: #333;
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 5px;
    }

    .go-back a:hover {
      background-color: #555;
    }
  </style>
</head>
<body>
  <h1>List of All Equipments</h1>
  <div class="table-container">
    <table>
      <thead>
        <th>Name</th>
        <th>Equipment Class</th>
        <th>Specs</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Status</th>
        <th>Edit</th>
        <th>Delete</th>
      </thead>
      <tbody>
        <% if @adminlegs.present? %>
          <% @adminlegs.each do |adminleg| %>
            <tr>
              <td><%= adminleg.name %></td>
              <td><%= adminleg.equipment_class %></td>
              <td><%= adminleg.specs %></td>
              <td><%= adminleg.quantity %></td>
              <td><%= adminleg.price %></td>
              <td><%= adminleg.status %></td>
              <td><button><a href="<%= edit_adminleg_path(adminleg.id) %>">Edit</a></button></td>
              <td><button><a href="<%= delete_adminleg_path(adminleg.id) %>">Delete</a></button></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="no-data">No adminlegs found</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="go-back">
    <a href="/adminlist">Go Back</a>
  </div>
</body>
</html>
