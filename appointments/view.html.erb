<!-- app/views/appointments/index.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Appointments</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 20px; /* Add some padding to the body */
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      min-height: 100vh;
    }

    h1 {
      color: #333;
      text-align: center;
      margin-bottom: 20px;
    }

    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      background-color: #fff;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #007BFF;
      color: #fff;
    }

    tbody tr:hover {
      background-color: #f5f5f5;
    }

    a {
      display: inline-block;
      margin-top: 20px;
      padding: 10px 20px;
      background-color: #007BFF;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    a:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <h1>My Appointments</h1>
  <table border="1">
    <thead>
      <th>Exercise</th>
      <th>Sets</th>
      <th>Reps</th>
      <th>With Equipment</th>
      <th>Time In</th>
      <th>Time Out</th>
      <th>Date</th>
    </thead>
    <tbody>
      <% if @appointments.present? %>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.exercise %></td>
            <td><%= appointment.sets %></td>
            <td><%= appointment.reps %></td>
            <td><%= appointment.equip %></td>
            <td><%= appointment.time_in %> <%= appointment.in %></td>
            <td><%= appointment.time_out %> <%= appointment.out %></td>
            <td><%= appointment.date %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
        </tr>
      <% end %>
    </tbody>
  </table>
  <a href="/home">Go Back</a>
</body>
</html>
